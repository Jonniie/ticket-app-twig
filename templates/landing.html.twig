{% extends 'base.html.twig' %}

{% block title %}TicketApp - Streamline Your Ticket Management{% endblock %}

{% block content %}
<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100">
    <!-- Decorative Circles -->
    <div class="absolute top-20 left-10 w-32 h-32 bg-black rounded-full opacity-5"></div>
    <div class="absolute top-40 right-20 w-24 h-24 bg-black rounded-full opacity-10"></div>
    <div class="absolute bottom-20 left-1/2 w-16 h-16 bg-black rounded-full opacity-20"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="py-20 lg:py-32">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <!-- Content -->
                <div class="space-y-8">
                    <div class="space-y-4">
                        <h1 class="text-4xl lg:text-6xl font-bold text-black leading-tight">
                            Streamline Your
                            <span class="block text-gray-600">Ticket Management</span>
                        </h1>
                        <p class="text-xl text-gray-600 max-w-lg">
                            A modern, intuitive platform to manage tickets efficiently. 
                            Built with React, Vue.js, and Twig for maximum flexibility.
                        </p>
                    </div>

                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href="/auth/signup" class="btn-primary inline-flex items-center justify-center">
                            Get Started
                            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </a>
                        <a href="/auth/login" class="btn-secondary inline-flex items-center justify-center">
                            Login
                        </a>
                    </div>

                    <!-- Features -->
                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 pt-8">
                        <div class="flex items-center space-x-3">
                            <svg class="w-6 h-6 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="text-gray-700">Easy to Use</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 12H9m6 0a6 6 0 11-12 0 6 6 0 0112 0z"></path>
                            </svg>
                            <span class="text-gray-700">Team Collaboration</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <svg class="w-6 h-6 text-yellow-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                            <span class="text-gray-700">Fast & Reliable</span>
                        </div>
                    </div>
                </div>

                <!-- Visual -->
                <div class="relative">
                    <div class="bg-white rounded-2xl shadow-2xl p-8 border border-gray-200">
                        <div class="space-y-6">
                            <div class="flex items-center justify-between">
                                <h3 class="font-semibold text-lg">Recent Tickets</h3>
                                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                            </div>
                            
                            <div class="space-y-4">
                                <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                                    <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                                    <div class="flex-1">
                                        <p class="font-medium text-sm">Website Performance</p>
                                        <p class="text-xs text-gray-500">Open • High Priority</p>
                                    </div>
                                </div>
                                
                                <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                                    <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
                                    <div class="flex-1">
                                        <p class="font-medium text-sm">Mobile App Bug</p>
                                        <p class="text-xs text-gray-500">In Progress • Medium</p>
                                    </div>
                                </div>
                                
                                <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                                    <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
                                    <div class="flex-1">
                                        <p class="font-medium text-sm">Database Issue</p>
                                        <p class="text-xs text-gray-500">Closed • High Priority</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Floating elements -->
                    <div class="absolute -top-4 -right-4 w-8 h-8 bg-black rounded-lg rotate-12"></div>
                    <div class="absolute -bottom-4 -left-4 w-6 h-6 bg-gray-400 rounded-full"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Wavy Background -->
    <div class="absolute bottom-0 left-0 w-full">
        <svg 
            viewBox="0 0 1440 120" 
            class="w-full h-20 fill-white"
            preserveAspectRatio="none"
        >
            <path d="M0,64L48,69.3C96,75,192,85,288,80C384,75,480,53,576,48C672,43,768,53,864,64C960,75,1056,85,1152,80C1248,75,1344,53,1392,42.7L1440,32L1440,120L1392,120C1344,120,1248,120,1152,120C1056,120,960,120,864,120C768,120,672,120,576,120C480,120,384,120,288,120C192,120,96,120,48,120L0,120Z"></path>
        </svg>
    </div>
</section>

<!-- Features Section -->
<section class="py-20 lg:py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl lg:text-4xl font-bold text-black mb-4">
                Powerful Features for Modern Teams
            </h2>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                Everything you need to manage tickets efficiently and collaborate with your team
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="bg-gray-50 rounded-xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-black mb-2">Easy Ticket Creation</h3>
                <p class="text-gray-600">
                    Create and organize tickets with custom priorities and detailed descriptions. 
                    Get started in seconds.
                </p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-gray-50 rounded-xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-black mb-2">Real-time Updates</h3>
                <p class="text-gray-600">
                    Stay synchronized with your team. See ticket updates and status changes 
                    instantly.
                </p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-gray-50 rounded-xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-black mb-2">Detailed Analytics</h3>
                <p class="text-gray-600">
                    Track ticket statistics and monitor team productivity with insightful 
                    dashboards.
                </p>
            </div>

            <!-- Feature 4 -->
            <div class="bg-gray-50 rounded-xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-black mb-2">Smart Search & Filter</h3>
                <p class="text-gray-600">
                    Find tickets quickly with powerful search and filtering by status, 
                    priority, and more.
                </p>
            </div>

            <!-- Feature 5 -->
            <div class="bg-gray-50 rounded-xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-black mb-2">Customizable Status</h3>
                <p class="text-gray-600">
                    Manage tickets through different statuses: Open, In Progress, and Closed. 
                    Full control.
                </p>
            </div>

            <!-- Feature 6 -->
            <div class="bg-gray-50 rounded-xl p-8 border border-gray-200 hover:shadow-lg transition-shadow">
                <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                </div>
                <h3 class="text-lg font-semibold text-black mb-2">Lightning Fast</h3>
                <p class="text-gray-600">
                    Built for performance. Experience lightning-fast load times and instant 
                    interactions.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-black text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold mb-6">Ready to streamline your workflow?</h2>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
            Join thousands of teams already using TicketApp to manage their tickets efficiently.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/auth/signup" class="bg-white text-black px-8 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors inline-flex items-center justify-center">
                Get Started Free
            </a>
            <a href="/auth/login" class="border border-white text-white px-8 py-3 rounded-lg font-medium hover:bg-white hover:text-black transition-colors inline-flex items-center justify-center">
                Sign In
            </a>
        </div>
    </div>
</section>
{% endblock %}
